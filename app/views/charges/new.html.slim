= form_tag charges_path do
  article
    - if flash[:error].present?
      #error_explanation
        p= flash[:error]
    label.amount
      span
        | Amount: #{number_to_currency(@amount)}
  script.stripe-button data-amount="#{@amount * 100}" data-description="#{@description}" data-key="#{Rails.configuration.stripe[:publishable_key]}" data-locale="auto" src="https://checkout.stripe.com/checkout.js" 
